---
export interface Props {
	title: string;
	href: string;
}

const { href, title } = Astro.props as Props;
---

<li class="border-2 border-solid border-black mb-5 text-center rounded-md bg-white hover:border-dashed hover:underline sm:mb-7">
	<a href={href} class="focus:underline" target="_blank">
		<h4 class="py-2">
			{title}
		</h4>
	</a>
</li>

